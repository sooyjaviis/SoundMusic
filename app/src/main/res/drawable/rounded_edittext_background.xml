<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Relleno del fondo (Blanco) -->
    <solid android:color="@color/white" />

    <!-- Borde (Gris claro) -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Esquinas redondeadas -->
    <corners android:radius="24dp" />

    <!-- Padding interno para que el texto no toque el borde (opcional, pero Ãºtil) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
