<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degradado"
    android:padding="16dp"
    tools:context=".HomeActivity">

    <!-- CABECERA -->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buenas vibras,"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Javier"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_greeting" />

    <ImageView
        android:id="@+id/iv_profile_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile_placeholder"
        android:contentDescription="Icono de perfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_greeting"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:tint="@color/gris_texto_input"
        android:background="@drawable/bg_circle_gris"
        android:padding="8dp" />

    <!-- BARRA DE BÚSQUEDA -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_rounded_dark"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:hint="Busca artistas, playlists o estados"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/gris_texto_input"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name"
        android:inputType="text"/>

    <!-- CONTENIDO PRINCIPAL (INICIO) -->
    <ScrollView
        android:id="@+id/sv_home_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintBottom_toTopOf="@id/player_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recomendado para ti"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="24dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <include layout="@layout/item_playlist_card" />
                    <include layout="@layout/item_playlist_card" />
                    <include layout="@layout/item_playlist_card" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Energía Total"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#3A2060"
                android:contentDescription="Energía Total cover placeholder"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Para Estudiar"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="#703080"
                android:contentDescription="Para Estudiar cover placeholder"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- RESULTADOS DE BÚSQUEDA INSTANTÁNEA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_instant_results"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/et_search"
        app:layout_constraintBottom_toTopOf="@id/player_bar"
        tools:visibility="visible"
        tools:listitem="@layout/item_track_result"/>

    <!-- BARRA DEL REPRODUCTOR (player_bar) - CORREGIDA -->
    <LinearLayout
        android:id="@+id/player_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#282828"
        android:padding="10dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 1. IMAGEN DE CARÁTULA (CORREGIDO: Ahora es ImageView con ID) -->
        <ImageView
            android:id="@+id/iv_player_cover"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_music_placeholder"
            android:contentDescription="Cover de la canción actual"
            android:background="#333333"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp" />

        <!-- 2. TÍTULO Y ARTISTA -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp">
            <TextView
                android:id="@+id/tv_player_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lofi Beats"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tv_player_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artista"
                android:textColor="@color/gris_texto_input"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 3. CONTROLES DE REPRODUCCIÓN -->

        <!-- Botón ANTERIOR (Opcional, pero útil para controles) -->
        <ImageView
            android:id="@+id/iv_player_prev"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_skip_previous"
            android:contentDescription="Canción anterior"
            app:tint="@android:color/white"
            android:layout_marginEnd="15dp" />

        <!-- Botón PLAY/PAUSE (Necesario para la lógica de reproducción) -->
        <ImageView
            android:id="@+id/iv_player_play_pause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_play_arrow"
            android:contentDescription="Reproducir / Pausar"
            app:tint="@android:color/white"
            android:layout_marginEnd="15dp" />

        <!-- Botón SIGUIENTE (Opcional, pero útil para controles) -->
        <ImageView
            android:id="@+id/iv_player_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_skip_next"
            android:contentDescription="Canción siguiente"
            app:tint="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
