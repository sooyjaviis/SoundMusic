<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 1. Estilo Principal (Día) -->
    <style name="Theme.ReproductorMusic" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores claros/normales aquí -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- 2. Estilo de Campo de Entrada -->
    <style name="TextInputStyle">
        <item name="android:background">@drawable/bg_rounded_dark</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/gris_texto_input</item>
    </style>

</resources>
